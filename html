<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sensor Data</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        .container {
            display: flex;
            justify-content: space-between;
        }
        .room {
            width: 45%;
        }
    </style>
    <script>
        function fetchRoomData(room) {
            fetch(`/latest?room=${room}`)
                .then(response => response.json())
                .then(data => {
                    let table;
                    if (room === 'room1') {
                        table = document.getElementById('room1').getElementsByTagName('tbody')[0];
                    } else if (room === 'room2') {
                        table = document.getElementById('room2').getElementsByTagName('tbody')[0];
                    }

                    if (data.timestamp === null) {
                        return;
                    }

                    // 데이터가 이미 존재하는지 확인
                    if (table.rows.length > 0 && table.rows[0].cells[0].innerText === data.timestamp) {
                        return; // 데이터가 이미 존재하면 중복 데이터 삽입하지 않음
                    }

                    // 새로운 데이터를 테이블의 맨 위에 삽입
                    let newRow = table.insertRow(0);
                    newRow.innerHTML = `<td>${data.timestamp}</td>
                                        <td>${data.value0}</td>
                                        <td>${data.value1}</td>
                                        <td>${data.value2}</td>
                                        <td>${data.value3}</td>
                                        <td>${data.sound}</td>`;  // 소리 센서 데이터 추가
                })
                .catch(error => console.error('Error fetching data:', error));
        }

        function fetchAllData() {
            fetchRoomData('room1');
            fetchRoomData('room2');
        }

        // 5초마다 데이터 갱신
        setInterval(fetchAllData, 5000);

        // 30초마다 페이지 새로고침하여 중간값 갱신
        setInterval(function() {
            window.location.reload();
        }, 30000);

        // 페이지 로드 시 데이터 즉시 가져오기
        window.onload = fetchAllData;
    </script>
</head>
<body>
    <h1>Sensor Data</h1>
    <div class="container">
